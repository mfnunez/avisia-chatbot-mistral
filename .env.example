# Avisia Chatbot Environment Variables - Mistral AI Edition
# Copy this file to .env and fill in your values

# REQUIRED: Your Mistral AI API key
# Get it from: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# OPTIONAL: Model selection
# Options: mistral-small-latest (default), mistral-medium-latest, mistral-large-latest
MISTRAL_MODEL=mistral-small-latest

# OPTIONAL: CORS configuration
# Comma-separated list of allowed origins, or "*" for all
ALLOWED_ORIGINS=*

# OPTIONAL: Maximum webpage content length (in characters)
MAX_CONTENT_LENGTH=50000

# OPTIONAL: Server port (Cloud Run sets this automatically)
PORT=8080
